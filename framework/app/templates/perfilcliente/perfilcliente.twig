{% extends 'overall/layout' %}
{% block appBody %}
<div id="page-wrapper" class="gray-bg">
<div class="row border-bottom">
    {% include 'overall/header' %}
</div>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><i class="fa fa-user"></i> Perfil</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="home/">Home</a>
                        </li>
                        <li class="active">
                            <strong>Perfil</strong>
                        </li>
                    </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
             <div class="col-lg-12">
                <a onclick="cargardocumentos()" class="btn btn-warning btn-rounded" style="float:right; margin-bottom:10px;"><i class="fa fa-user"></i> Cargar documentos</a>
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                            <h5>Perfil de usuario</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                    </div>
                        <div class="ibox-content">
                            <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover tablita" >
                                        <thead>
                                        <tr>
                                            <th>Documento de identidad</th>
                                            <th>Pasaporte</th>
                                            <th>Rif</th>
                                            <th>Referencia bancaria 1</th>
                                            <th>Referencia bancaria 2</th>
                                        </tr>
                                        </thead>
                                        <tbody>                                           
                                            <tr>
                                                <td>
                                                    {% if documentos.documento_identidad == null %}
                                                    No posee
                                                    {% else %}
                                                    <a href="{{ documentos.documento_identidad }}" target=_blank rel="noopener noreferrer"><img src="{{ documentos.documento_identidad }}"  class="img-thumbnail" style="width:75px;"></a>
                                                    {% endif %}
                                                </td>

                                                <td>                                                 
                                                    {% if documentos.pasaporte == null %}
                                                    No posee
                                                    {% else %}
                                                    <a href="{{ documentos.pasaporte }}" target=_blank rel="noopener noreferrer"><img src="{{ documentos.pasaporte }}"  class="img-thumbnail" style="width:75px;"></a>
                                                    {% endif %}
                                                </td>

                                                <td>
                                                    {% if documentos.rif == null %}
                                                    No posee
                                                    {% else %}
                                                    <a href="{{ documentos.rif }}" target=_blank rel="noopener noreferrer"><img src="{{ documentos.rif }}"  class="img-thumbnail" style="width:75px;"></a>
                                                    {% endif %}                                                  
                                                </td>

                                                <td>
                                                    {% if documentos.referencia_bancaria_1 == null %}
                                                    No posee
                                                    {% else %}
                                                    <a href="{{ documentos.referencia_bancaria_1 }}" target=_blank rel="noopener noreferrer"><img src="{{ documentos.referencia_bancaria_1 }}"  class="img-thumbnail" style="width:75px;"></a>
                                                    {% endif %}                                                     
                                                </td>

                                                <td>
                                                    {% if documentos.referencia_bancaria_2 == null %}
                                                    No posee
                                                    {% else %}
                                                    <a href="{{ documentos.referencia_bancaria_2 }}" target=_blank rel="noopener noreferrer"><img src="{{ documentos.referencia_bancaria_2 }}"  class="img-thumbnail" style="width:75px;"></a>
                                                    {% endif %}                                                      
                                                </td>

                                            </tr>                                         
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <th>Documento de identidad</th>
                                            <th>Pasaporte</th>
                                            <th>Rif</th>
                                            <th>Referencia bancaria 1</th>
                                            <th>Referencia bancaria 2</th>
                                        </tr>
                                        </tfoot>
                                    </table>
                            </div>
                        </div>
                </div>
            </div>
    </div>
</div>

{% include 'perfilcliente/cargardocumentos' %}
{% include 'overall/footer' %}
</div>
{% endblock %}

{% block appFooter %}
    <script src="assets/jscontrollers/perfilcliente/perfilcliente.js"></script>  
{% endblock %}