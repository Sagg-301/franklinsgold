{% extends 'overall/layout' %}
{% block appBody %}
<div id="page-wrapper" class="gray-bg">
<div class="row border-bottom">
    {% include 'overall/header' %}
</div>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><i class="fa fa-coins"></i> Monedas</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="home/">Home</a>
                        </li>
                        <li class="active">
                            <strong>Monedas</strong>
                        </li>
                    </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
             <div class="col-lg-12">
                <a onclick="crearMoneda()" class="btn btn-warning btn-rounded" style="float:right; margin-bottom:10px;"><i class="fa fa-coins"></i> Crear Moneda</a>
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                            <h5>Monedas registradas en el sistema</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                    </div>
                        <div class="ibox-content">
                            <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover tablita"  id="tablish">
                                        <thead>
                                        <tr>
                                            <th>Código</th>
                                            <th>Fecha Elaboración</th>
                                            <th>Diámetro</th>
                                            <th>Espesor</th>
                                            <th>Composición</th>
                                            <th>Peso</th>
                                            <th>Origen</th>
                                            <th>Código QR</th>
                                            <th>Acciones</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% for m in monedas %}  
                                            <tr>
                                                <td>{{m.codigo}}</td>
                                                <td>{{ fecha('D, d F, Y h:i a', m.fecha_elaboracion) }}</td>
                                                <td>{{m.diametro}}</td>
                                                <td>{{m.espesor}}</td>
                                                <td>{{m.composicion}}</td>
                                                <td>{{m.peso}}</td>
                                                <td>{{m.nombre}}</td>
                                                <td>
                                                <a href="{{ m.codigo_qr }}" target=_blank rel="noopener noreferrer"><img src="{{ m.codigo_qr }}" alt="Codigo QR" class="img-thumbnail" style="width:75px;"></a>
                                                </td>
                                                <td>
                                                <a onclick="editar_una_moneda({{m.codigo}},{{m.diametro}},{{m.espesor}},'{{m.composicion}}',{{m.peso}},{{m.id_origen}})" style="font-size:22px;" title="Editar"  ><i class="fa fa-sliders naranja"></i></a>
                                                <a onclick="delete_item({{m.codigo}},'monedas')"style="font-size:22px;" title="Eliminar"><i class="fa fa-trash naranja"></i></a>
                                                </td>
                                            </tr>
                                            {% else %}
                                                 <tr><td>No hay resultados</td></tr>
                                            {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <th>Código</th>
                                            <th>Fecha Elaboración</th>
                                            <th>Diámetro</th>
                                            <th>Espesor</th>
                                            <th>Composición</th>
                                            <th>Peso</th>
                                            <th>Origen</th>
                                            <th>Código QR</th>
                                            <th>Acciones</th>
                                        </tr>
                                        </tfoot>
                                    </table>
                            </div>
                        </div>
                </div>
            </div>
    </div>
</div>

{% include 'monedas/crear' %}
{% include 'monedas/editar' %}
{% include 'overall/footer' %}
</div>
{% endblock %}

{% block appFooter %}
<script src="./assets/jscontrollers/monedas/crear.js"></script>
<script src="./assets/jscontrollers/monedas/editar.js"></script>
<script src="views/propios/js/delete_item.js"></script>


{% endblock %}