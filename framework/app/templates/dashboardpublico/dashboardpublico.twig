{% extends 'overall/layout' %}
{% block appBody %}
<div id="page-wrapper" class="gray-bg">

            <div class="wrapper wrapper-content">
            	<div class="row">
            	</div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <div>
                                        <span class="pull-right text-right">
                                        <small>Cotización en tiempo real del precio del oro en el mercado</small>
                                        </span>
                                        <h3 class="font-bold no-margins">
                                            Precio del oro (USD)
                                        </h3>
                                </div>

                                <div>
                                    <canvas id="lineChart" height="45" width="100%"></canvas>
                                </div>

                                <div class="m-t-md">
                                    <small class="pull-right">
                                        <i class="fa fa-clock-o"> </i>
                                        <i id="fecha_oro"> </i>
                                    </small>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                    <div>
                                        <span class="pull-right text-right">
                                        <small>Cotización en tiempo real del precio de la plata en el mercado.</small>
                                        </span>
                                        <h3 class="font-bold no-margins">
                                            Precio de la plata (USD)
                                        </h3>
                                    </div>

                                <div>
                                    <canvas id="plataChart" height="45" width="100%"></canvas>
                                </div>

                                <div class="m-t-md">
                                    <small class="pull-right">  
