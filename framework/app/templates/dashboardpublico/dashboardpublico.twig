                                <div class="col-md-6">
                                    <div class="ibox-title">
                                        <h5>Compra {{lang.wrapperdash.compra}}</h5>
                                    </div>
                                    <div class="ibox-content contenidobox">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover tablita" >
                                                <thead>
                                                <tr>
                                                    <th>Fecha {{lang.wrapperdash.fecha}}</th>
                                                    <!--<th>Sucursal</th>-->                                                 
                                                    <th>Cantidad {{lang.wrapperdash.cantidad}}</th>
                                                    <th>Precio {{lang.wrapperdash.precio}}</th>
                                                    <th>Monto(USD) {{lang.wrapperdash.monto}}</th>
                                                </tr>
                                                </thead>
                                                <tbody> 
                                                {% for co in compras_oro %} 
                                                    <tr>
                                                        <td>{{ fecha('D, d F, Y h:i a', co.fecha) }}</td>
                                                        {#<td>{{ co.nombre_sucursal }}</td>#}                                                   
                                                        <td>{{ co.cantidad }}</td>
                                                        <td>{{ co.precio|number_format(2, ',', '.') }}</td>
                                                        <td>{{ (co.cantidad * co.precio)|number_format(2, ',', '.') }}</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
