{% extends 'overall/layout' %}
{% block appBody %}
<div id="page-wrapper" class="gray-bg">
	<div class="row border-bottom">
	    {% include 'overall/header' %}
	</div>
	<div class="row wrapper border-bottom white-bg page-heading">
	    <div class="col-lg-10">
	        <h2><i class="fa fa-gears"></i> Conversor de dívisas</h2>
				<ol class="breadcrumb">
					<li>
						<a href="home/">Home</a>
					</li>
					<li class="active">
						<strong>Conversor</strong>
					</li>
				</ol>
	    </div>
	</div>

	<div class="wrapper wrapper-content animated fadeInRight">
		<div class="row">
			<div class="col-md-12">
				<div class="ibox float-e-margins">
                    <div class="ibox-content">
						<div class="row">
							
							<div class="col-md-3 col-xs-12">
								<div class="form-group">
									<label for="divisa_inicial" class="control-label mb-1" >De la dívisa</label>
									<select name="divisa_inicial" id="id_divisa_inicial" onchange="changePrice()" class="form-control" style="width: 100%">
										<option disabled selected value>Seleccione una dívisa</option>
										<option value="{{ultimo_precio_oro}}">Oro(Onza)</option>
										<option value="{{ultimo_precio_oro / 28.3495}}">Oro(Gramo)</option>
										<option value="{{ultimo_precio_plata}}">Plata(Onza)</option>
										<option value="{{ultimo_precio_plata / 28.3495}}">Plata(Gramo)</option>
										{% for d in divisas %}
											<option value="{{d.precio_dolares}}">{{d.nombre_divisa}}</option>
										{% endfor %}
									</select>
								</div>
							</div>

							<div class="col-md-3 col-xs-12">							
								<div class="form-group">
									<label for="precio_divisa_inicial">Precio(Dólares por unidad)</label>
									<input name="precio_divisa_inicial" id="id_precio_divisa_inicial" type="number" onchange="changeMontoInicial()" class="form-control">
								</div>
							</div>

							<div class="col-md-3 col-xs-12">							
								<div class="form-group">
									<label for="cantidad_divisa_inicial">Cantidad dívisa inicial</label>
									<input name="cantidad_divisa_inicial" id="id_cantidad_divisa_inicial" type="number" onchange="changeMontoInicial()" class="form-control">
								</div>
							</div>
							
							<div class="col-md-3 col-xs-12">							
								<div class="form-group">
									<label for="monto_inicial">Monto(Dólares)</label>
									<input name="monto_inicial" id="id_monto_inicial" type="text" readonly="readonly" class="form-control">
								</div>
							</div>

							<div class="col-md-12 col-xs-12">
								<div class="form-group">
									<label for="divisa_final" class="control-label mb-1" >A la dívisa</label>
									<select name="divisa_final" id="id_divisa_final" class="form-control" style="width: 100%">
											<option disabled selected value>Seleccione una dívisa</option>
											<option value="{{ultimo_precio_oro}}">Oro(Onza)</option>
											<option value="{{ultimo_precio_oro / 28.3495}}">Oro(Gramo)</option>
											<option value="{{ultimo_precio_plata}}">Plata(Onza)</option>
											<option value="{{ultimo_precio_plata / 28.3495}}">Plata(Gramo)</option>
											{% for d in divisas %}
												<option value="{{d.precio_dolares}}">{{d.nombre_divisa}}</option>
											{% endfor %}
									</select>
								</div>
							</div>

							<div class="col-md-12 col-xs-12">							
								<div class="form-group">
									<button type="button" id="convertirDivisabtn" class="btn btn-primary">Convertir</button>
								</div>
							</div>

							<div class="col-md-12 col-xs-12">							
								<div class="form-group">
									<label for="monto_final">Equivalente</label>
									<input name="monto_final" id="id_monto_final" type="text" readonly="readonly" class="form-control">
								</div>
							</div>

						</div>
                    </div>
                </div>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block appFooter %}
<script src="./assets/jscontrollers/calculadora/calculadora.js"></script>
{% endblock %}