{% extends 'overall/layout' %}
{% block appBody %}
<div id="page-wrapper" class="gray-bg">
<div class="row border-bottom">
    {% include 'overall/header' %}
</div>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><i class="fa fa-hotel"></i> Sucursales</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="home/">Home</a>
                        </li>
                        <li class="active">
                            <strong>Sucursales</strong>
                        </li>
                    </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
             <div class="col-lg-12">
                <a onclick="crearsucursal()" class="btn btn-warning btn-rounded" style="float:right; margin-bottom:10px;"><i class="fa fa-hotel"></i> Crear Sucursal</a>
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                            <h5>Sucursales registradas en el sistema</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                    </div>
                        <div class="ibox-content">
                            <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover tablita" >
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nombre</th>
                                            <th>Teléfono</th>
                                            <th>Dirección</th>
                                            <th>Acciones</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% for s in sucursales %}  
                                            <tr>
                                                <td>{{ s.id_sucursal }}</td>
                                                <td>{{ s.nombre }}</td>
                                                <td>{{ s.telefono }}</td>
                                                <td>{{ s.direccion }}</td>
                                                <td>
                                                <a style="font-size:22px;" title="Editar" data-toggle="modal" onclick="editarSucursal({{ s.id_sucursal }},{{ s.id_user }},'{{ s.nombre }}','{{ s.telefono }}','{{ s.direccion }}')"><i class="fa fa-sliders-h naranja"></i></a>
                                                <a style="margin-left: 20px;font-size:22px;" onclick="delete_item({{ s.id_sucursal }},'sucursal')" title="Eliminar"><i class="fa fa-trash naranja"></i></a>
                                                </td>
                                            </tr>
                                            {% else %}
                                                 <tr><td>No hay resultados</td></tr>
                                            {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nombre</th>
                                            <th>Teléfono</th>
                                            <th>Dirección</th>
                                            <th>Acciones</th>
                                        </tr>
                                        </tfoot>
                                    </table>
                            </div>
                        </div>
                </div>
            </div>
    </div>
</div>

{% include 'sucursal/crear' %}
{% include 'sucursal/editar' %}
{% include 'overall/footer' %}
</div>
{% endblock %}

{% block appFooter %}
    <script src="assets/jscontrollers/sucursales/crear.js"></script>
    <script src="assets/jscontrollers/sucursales/editar.js"></script>
    <script src="views/propios/js/delete_item.js"></script>   
{% endblock %}