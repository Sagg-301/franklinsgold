{% extends 'overall/layout' %}
{% block appBody %}
<div id="page-wrapper" class="gray-bg">
<div class="row border-bottom">
    {% include 'overall/header' %}
</div>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><i class="fa fa-money"></i> Ordenes</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="home/">Home</a>
                        </li>
                        <li class="active">
                            <strong>Ordenes</strong>
                        </li>
                    </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
             <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                            <h5>Ordenes registradas en el sistema</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                    </div>
                        <div class="ibox-content">
                            <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover tablita" >
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Usuario</th>
                                            <th>Número de cuenta</th>
                                            <th>Sucursal</th>
                                            <th>Composición</th>
                                            <th>Cantidad</th>
                                            <th>Tipo Orden</th>
                                            <th>Estado</th>
                                            <th>Fecha Creación</th>
                                            <th>Moneda</th>
                                            <th>Acciones</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% for o in ordenes %}  
                                            <tr>
                                                <td>{{ o.id_orden }}</td>
                                                <td>{{ o.primer_nombre }} {{ o.primer_apellido }}</td>
                                                <td>{{ o.numero_cuenta }}</td>
                                                <td>{{ o.nombre_sucursal }}</td>
                                                <td>{{ o.tipo_gramo == 1 ? 'Oro' : "Plata" }}</td>
                                                <td>{{ o.cantidad }}</td>
                                                <td>{{ o.tipo_orden == 1 ? 'Compra' :  o.tipo_orden == 2  ? "Venta" : "Intercambio" }}</td>
                                                <td>{{ o.estado == 1 ? 'Espera' : "Concretada" }}</td>
                                                <td>{{ fecha('D, d F, Y h:i a', o.fecha) }}</td>
                                                <td>{{ o.codigo_moneda }}</td>
                                                <td>
                                                 {% if o.estado == 1 %} 
                                                 <a style="font-size:22px;" title="Concretar" data-toggle="modal" onclick="specify_orden({{ o.id_orden }})"><i class="fa fa-sliders naranja"></i></a>
                                                 <a style="margin-left: 20px;font-size:22px;" onclick="delete_item({{ o.id_orden }},'ordenadmin')" title="Eliminar"><i class="fa fa-trash naranja"></i></a>
                                                 {% endif %}                                       
                                                </td>
                                            </tr>
                                            {% else %}
                                                 <tr><td>No hay resultados</td></tr>
                                            {% endfor %}
                                        </tbody>
                                        <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Usuario</th>
                                            <th>Número de cuenta</th>
                                            <th>Sucursal</th>
                                            <th>Composición</th>
                                            <th>Cantidad</th>
                                            <th>Tipo Orden</th>
                                            <th>Estado</th>
                                            <th>Fecha Creación</th>
                                            <th>Moneda</th>
                                            <th>Acciones</th>
                                        </tr>
                                        </tfoot>
                                    </table>
                            </div>
                        </div>
                </div>
            </div>
    </div>
</div>


</div>
{% endblock %}

{% block appFooter %}
    <script src="./assets/jscontrollers/ordenes/concretar.js"></script> 
    <script src="views/propios/js/delete_item.js"></script>   
{% endblock %}