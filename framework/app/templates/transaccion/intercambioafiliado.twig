{% extends 'overall/layout' %} {% block appBody %}
<div id="page-wrapper" class="gray-bg">
    <div class="row border-bottom">
        {% include 'overall/header' %}
    </div>
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>
                <i class="fa fa-money"></i> Intercambios</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="home/">Home</a>
                </li>
                <li class="active">
                    <strong>Intercambios</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">

                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Intercambios registradas en el sistema</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover tablita">
                                <thead>
                                    <tr>
                                        <th>Usuario</th>
                                        <th>Comercio</th>
                                        <th>Resúmen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for t in transacciones %}
                                    <tr>
                                        <td>{{ t.primer_nombre }} {{ t.primer_apellido }}</td>
                                        <td>{{ t.nombre }}</td>
                                        <td><a style="font-size:22px;" title="Intercambios" data-toggle="modal" onclick="showIntercambios({{ t.id_user }},{{ t.id_comercio_afiliado }})"><i class="fa fa-dollar naranja"></i></a></td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td>No hay resultados</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Usuario</th>
                                        <th>Comercio</th>
                                        <th>Resúmen</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include 'transaccion/crearintercambioafiliado' %} 
    {% include 'afiliados/intercambios' %} 
    {% include 'overall/footer' %}
</div>
{% endblock %} 
{% block appFooter %}
<script src="./assets/jscontrollers/transaccion/intercambioafiliado.js"></script> 
{% endblock %}