<div class="modal inmodal" id="crearIntercambio" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Cerrar</span>
                </button>
                <h4 class="modal-title">Creaci√≥n de transacciones</h4>
                <small class="font-bold">Franklins Gold</small>
            </div>
            <div class="modal-body">
                <form id="crear_transacciones_form">
                    <input id="tipo_transaccion" name="tipo" type="hidden">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="cc-payment" class="control-label mb-1" >Usuario Emisor<span>*</span></label>
                                <select name="id_usuario" id="id_id_usuario" class="form-control select2" style="width: 100%" onchange="disableSelectOption('id_id_usuario','id_id_usuario2')">
                                        <option disabled selected value>Seleccione un cliente</option>
                                        {% for u in usuarios %}
                                        <option value="{{ u.id_user }}">{{ u.primer_nombre }} {{ u.primer_apellido }}</option>
                                        {% endfor %}
                                </select>
                                <label for="cc-payment" class="control-label mb-1" >Usuario Receptor<span>*</span></label>
                                <select name="id_usuario2" id="id_id_usuario2" class="form-control select2" style="width: 100%" onchange="disableSelectOption('id_id_usuario2','id_id_usuario')">
                                        <option disabled selected value>Seleccione un cliente</option>
                                        {% for u in usuarios %}
                                        <option value="{{ u.id_user }}">{{ u.primer_nombre }} {{ u.primer_apellido }}</option>
                                        {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="cc-payment" class="control-label mb-1">Moneda<span>*</span></label>
                            <select name="codigo" id="id_id_moneda" class="form-control m-b select2" style="width: 100%" onchange="disableSelectOptionMon('id_id_moneda','id_id_moneda2')">
                                    <option disabled selected value>Seleccione una moneda</option>
                                    {% for m in monedas %}
                                    <option value="{{ m.codigo }}">{{m.codigo}}</option>
                                    {% endfor %}
                            </select>
                            <label for="cc-payment" class="control-label mb-1">Moneda<span>*</span></label>
                            <select name="codigo2" id="id_id_moneda2" class="form-control m-b select2" style="width: 100%" onchange="disableSelectOptionMon('id_id_moneda2','id_id_moneda')">
                                    <option disabled selected value>Seleccione una moneda</option>
                                    {% for m in monedas %}
                                    <option value="{{ m.codigo }}">{{m.codigo}}</option>
                                    {% endfor %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button type="button" id="creartransaccionesbtn" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>